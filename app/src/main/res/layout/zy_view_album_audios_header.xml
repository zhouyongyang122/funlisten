<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/c6"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/textSort"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/btn_sorting_n"
        android:gravity="center"
        android:text="正序"
        android:textColor="@color/c3"
        android:textSize="@dimen/f5" />

    <TextView
        android:id="@+id/textEpisode"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:text="已经更新到98集"
        android:textColor="@color/c1"
        android:textSize="@dimen/f7" />

    <TextView
        android:id="@+id/textChoice"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@drawable/icon_anthology_n"
        android:gravity="center"
        android:text="正序"
        android:textColor="@color/c3"
        android:textSize="@dimen/f5" />

    <TextView
        android:id="@+id/textDown"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/btn_download_n"
        android:gravity="center"
        android:text="批量下载"
        android:textColor="@color/c3"
        android:textSize="@dimen/f5" />

</LinearLayout>