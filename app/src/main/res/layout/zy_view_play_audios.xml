<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="180dp">

    <TextView
        android:id="@+id/textPlayType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/btn_change_or_cycle_n"
        android:gravity="center"
        android:text="循环"
        android:textColor="@color/c3"
        android:textSize="@dimen/f4" />

    <TextView
        android:id="@+id/textPlaySort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/btn_sorting_n"
        android:gravity="center"
        android:text="排序"
        android:textColor="@color/c3"
        android:textSize="@dimen/f4" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/textPlayType"
        android:layout_marginTop="15dp"
        android:background="@color/c6" />

    <com.funlisten.base.view.ZYSwipeRefreshRecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textPlayType"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:background="@color/c6" />

    <TextView
        android:id="@+id/textClose"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="关闭"
        android:textColor="@color/c2"
        android:textSize="@dimen/f2" />
</RelativeLayout>