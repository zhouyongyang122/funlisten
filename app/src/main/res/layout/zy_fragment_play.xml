<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="51dp"
        android:layout_marginTop="4dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@color/c6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textCollect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/tab_icon_collect_n"
            android:gravity="center"
            android:text="收藏"
            android:textColor="@color/c4"
            android:textSize="@dimen/f9" />

        <TextView
            android:id="@+id/textShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/tab_icon_share_n"
            android:gravity="center"
            android:text="分享"
            android:textColor="@color/c4"
            android:textSize="@dimen/f9" />


        <TextView
            android:id="@+id/textDown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/tab_icon_download_n"
            android:gravity="center"
            android:text="下载"
            android:textColor="@color/c4"
            android:textSize="@dimen/f9" />


        <TextView
            android:id="@+id/textComment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/tab_icon_comment_n"
            android:gravity="center"
            android:text="评论"
            android:textColor="@color/c4"
            android:textSize="@dimen/f9" />


    </LinearLayout>

</RelativeLayout>