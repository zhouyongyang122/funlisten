<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="第1期 | 梦想小城"
            android:textColor="@color/c1"
            android:textSize="@dimen/f3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textTimeDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-08-09"
                android:textColor="@color/c4"
                android:textSize="@dimen/f7" />

            <TextView
                android:id="@+id/textPlayNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/icon_play_amount_d"
                android:text="30万"
                android:textColor="@color/c4"
                android:textSize="@dimen/f7" />

            <TextView
                android:id="@+id/textTimeHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="10:30"
                android:textColor="@color/c4"
                android:textSize="@dimen/f7" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/zy_selector_dowload" />

</RelativeLayout>